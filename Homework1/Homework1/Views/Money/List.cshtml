@model IEnumerable<Homework1.Models.ViewModels.MoneyViewModel>
@using Homework1.Models.ViewModels;

<table class="table table-hover table-bordered">
    <tr>
        <th>
            #
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Money)
        </th>
        @if (User.Identity.IsAuthenticated)
        {
            <th></th>
        }
    </tr>

@{ 
    var index = 1;
}

@foreach (var item in Model.OrderBy(p => p.Date)) {
   
    var categoryTdClassName = item.Category == MoneyCategory.Income ? "text-primary" : "text-danger";

    <tr>
        <td>
            @(index++)
        </td>
        <td class="@categoryTdClassName">
            @Html.DisplayFor(modelItem => item.Category)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Money)
        </td>
        @if (User.Identity.IsAuthenticated)
        {
            <td>
                @Html.ActionLink("編輯", "Edit", "AccountBook", new { Area = "Power", Id = item.Id }, null)
            </td>
        }
    </tr>
}

</table>