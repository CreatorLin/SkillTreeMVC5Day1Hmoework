@model IEnumerable<Homework1.Models.ViewModels.MoneyViewModel>

<table class="table table-hover table-bordered">
    <tr>
        <th>
            #
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Money)
        </th>
    </tr>

@{ 
    var index = 1;
}

@foreach (var item in Model.OrderBy(p => p.Date)) {
    <tr>
        <td>
            @(index++)
        </td>
        <td class="@(item.Category == Homework1.Models.ViewModels.MoneyCategory.Income ? "text-primary" : "text-danger")">
            @Html.DisplayFor(modelItem => item.Category)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Money)
        </td>
    </tr>
}

</table>